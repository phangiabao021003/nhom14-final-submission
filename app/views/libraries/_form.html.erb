<%= form_with(model: library) do |form| %>
<% if library.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% library.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :library_id, class: label_class %>
          <%= form.text_field :library_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :address, class: label_class %>
          <%= form.text_area :address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no_staff, class: label_class %>
          <%= form.text_field :no_staff, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :manager_id, class: label_class %>
        <%= form.select :manager_id, options_from_collection_for_select(Manager.all, 'id', 'managerid', selected = library.manager_id), class: label_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if library.persisted? %>
<%= link_to "Cancel", library, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", libraries_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
