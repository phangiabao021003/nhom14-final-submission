<%= form_with(model: book) do |form| %>
<% if book.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :library_id, class: label_class %>
        <%= form.select :library_id, options_from_collection_for_select(Library.all, 'id', 'library_id', selected = book.library_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bookid, class: label_class %>
          <%= form.text_field :bookid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :title, class: label_class %>
          <%= form.text_field :title, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :author_id, class: label_class %>
        <%= form.select :author_id, options_from_collection_for_select(Author.all, 'id', 'authorname', selected = book.author_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :isbn, class: label_class %>
          <%= form.text_field :isbn, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :publication_year, class: label_class %>
          <%= form.text_field :publication_year, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :genre_id, class: label_class %>
        <%= form.select :genre_id, options_from_collection_for_select(Genre.all, 'id', 'genre_name', selected = book.genre_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :avaibility, class: label_class %>
          <%= form.text_field :avaibility, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if book.persisted? %>
<%= link_to "Cancel", book, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", books_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
