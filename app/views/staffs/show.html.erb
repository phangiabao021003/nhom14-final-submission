<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Staff</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to staffs_path, class: button_class(theme: "transparent") do %>
      All Staffs
      <% end %>
      <%= link_to edit_staff_path(@staff), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Library:</p>
        <p><%= @staff.library.library_id %></p>
      </li>
      <li>
        <p class="font-semibold">Staffid:</p>
        <p><%= @staff.staffid %></p>
      </li>
      <li>
        <p class="font-semibold">Staffname:</p>
        <p><%= @staff.staffname %></p>
      </li>
      <li>
        <p class="font-semibold">Staffphone:</p>
        <p><%= @staff.staffphone %></p>
      </li>
      <li>
        <p class="font-semibold">Salary:</p>
        <p><%= @staff.salary %></p>
      </li>
      <li>
        <p class="font-semibold">Department:</p>
        <p><%= @staff.department,departmentname %></p>
      </li>
  </ul>
</div>
