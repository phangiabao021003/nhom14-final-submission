<%= form_with(model: member) do |form| %>
<% if member.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% member.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :library_id, class: label_class %>
          <%= form.text_field :library_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :memberid, class: label_class %>
          <%= form.text_field :memberid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :date_of_birth, class: label_class %>
          <%= form.date_field :date_of_birth, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.text_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :membership_status, class: label_class %>
          <%= form.text_field :membership_status, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if member.persisted? %>
<%= link_to "Cancel", member, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", members_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
