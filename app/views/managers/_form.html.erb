<%= form_with(model: manager) do |form| %>
<% if manager.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(manager.errors.count, "error") %> prohibited this manager from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% manager.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :managerid, class: label_class %>
          <%= form.text_field :managerid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.text_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :email, class: label_class %>
          <%= form.text_field :email, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if manager.persisted? %>
<%= link_to "Cancel", manager, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", managers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
